Task no 2
source code
package pattern;
public class Pattern {

    public static void main(String[] args) {
       int height = 5;
        int width = 7; 
        for (int i = 0; i < height; i++) {
            
            for (int j = 0; j < width; j++) {
               
                if (i == 0 || j == (width / 2)) {
                    System.out.print("*");
                } else {
                    System.out.print(" ");
                }
            }
            System.out.println();         }
    }
}

